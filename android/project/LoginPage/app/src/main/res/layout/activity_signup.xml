<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginBottom="-50dp"
    android:background="@android:color/white"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/typenewid"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/signup_id" />
        <Button
            android:id="@+id/bt_check_id"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/lgray"
            android:text="ID 중복 확인"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/typenewpw"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/signup_pw"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/typenewpw_a"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/signup_pw_check"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_signup_signup"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/lgray"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>